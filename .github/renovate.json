{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "description": "Process Task files",
      "fileMatch": [".taskfiles/.+\\.ya?ml$"],
      "matchStrings": [
        "# renovate: registryUrl=(?<registryUrl>\\S+) chart=(?<depName>\\S+)\n.*?(?<currentValue>[^-\\s]*)\n",
        "# renovate: registryUrl=(?<registryUrl>\\S+) chart=(?<depName>\\S+)\n(?<varName>\\S+): ['\"]{{ .(?P=varName) \\| default ['\"](?<currentValue>[^-\\s]*)['\"] }}['\"]"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
