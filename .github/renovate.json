{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pre-commit": {
    "enabled": true
  },
  "major": {
    "dependencyDashboardApproval": true
  },
  "flux": {
    "fileMatch": [
      "!./archive/**",
      "flux/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Group all dependencies in the docker/local-registry directory",
      "matchFileNames": ["docker/local-registry/**"],
      "groupName": "local-registry dependencies"
    },
    {
      "description": "Group all dependencies in the docker/pull-through-caches directory",
      "matchFileNames": ["docker/pull-through-caches/**"],
      "groupName": "pull-through-caches dependencies"
    },
    {
      "description": "Group all dependencies from docker/toolchain directory",
      "matchFileNames": ["docker/toolchain/**"],
      "groupName": "toolchain dependencies"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^docker/.+\\.sh$"],
      "matchStrings": [
        "#\\s?renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s.*?_VERSION=(?<currentValue>.*)"
      ]
    },



    {
      "fileMatch": ["^scripts/.+\\.sh$"],
      "matchStrings": [
        "https:\/\/github.com\/(?<depName>.*\/.*?)\/releases\/download\/(?<currentValue>.*)\/.+"
      ],
      "datasourceTemplate": "github-releases"
    },



    {
      "fileMatch": ["^sidero-metal/.+\\.ya?ml$"],
      "matchStrings": [
        "#\\s?renovate: depName=(?<depName>.*?)\\sversion: (?<currentValue>.*)",
        "image:\\s?(?<depName>.*?):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^sidero-metal/.+\\.ya?ml$"],
      "matchStrings": [
        "url: https:\/\/github.com\/(?<depName>.*?)\/releases\/download\/(?<currentValue>.*)\/.+",
        "#\\s?renovate: depName=(?<depName>.*?)\\s+talosVersion: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases"
    },



    {
      "fileMatch": ["^talos-linux/.+\\.patch$"],
      "matchStrings": [
        "image: (?<depName>.*?):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["^talos-linux/.+\\.patch$"],
      "matchStrings": [
        "https:\/\/raw.githubusercontent.com\/(?<depName>.*\/.*?)\/(?<currentValue>.*)\/.+",
        "https:\/\/github.com\/(?<depName>.*\/.*?)\/releases\/download\/(?<currentValue>.*)\/.+"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
